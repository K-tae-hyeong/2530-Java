import java.util.*;

public class Main{

	public static void main(String[] args) {

        Scanner input = new Scanner(System.in);

    	int A = input.nextInt();
        int B = input.nextInt();
        int C = input.nextInt();
        int D = input.nextInt();
        
        C += D;
        B += C/60;
        C %= 60;
        A += B/60;
        B %= 60;
        A %= 24;
        
        System.out.print(A + " " + B + " " + C);
	}
}
